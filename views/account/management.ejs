<h1><%= title %></h1>
<div class="account-management">
  <% if (messages && messages.length > 0) { %>
    <% messages.forEach(message => { %>
      <div class="messages <%= message.type %>">
        <p><%= message.text %></p>
      </div>
    <% }) %>
  <% } %>

  <h2>Welcome <%= account_firstname %></h2>
  <p>You're logged in</p>
  <a href="/account/update/<%= locals.accountData.account_id %>" class="edit-account">Update Account Information</a>

  <% if (account_type === "Employee" || account_type === "Admin") { %>
    <h3>Inventory Management</h3>
    <p><a href="/inv/" class="management-link">Manage Inventory</a></p>
  <% } %>
</div>


