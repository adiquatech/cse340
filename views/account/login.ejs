<h1><%= title %></h1>
<div class="login-container">
    <% if (Array.isArray(messages) && messages.length > 0) { %>
        <div class="messages">
            <% messages.forEach(message => { %>
                <p><%= message %></p>
            <% }) %>
        </div>
    <% } %>

    <form action="/account/login" method="post" class="login-form">
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" name="account_email" required placeholder="Enter your email" autocomplete="email">
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" id="password" name="account_password" required placeholder="Enter your password" autocomplete="current-password">
        </div>
        <button type="submit" class="login-button">Login</button>
    </form>
    <p class="register-link">No account? <a href="/account/registeration">Sign-up</a></p>
</div>