<h1><%= title %></h1>
<div class="add-inventory">
<% if (messages && messages.length > 0) { %>
    <% messages.forEach(message => { %>
        <div class="messages <%= message.type %>">
        <p><%= message.text %></p>
        </div>
    <% }) %>
    <% } %>

<!-- Form -->
<form id="updateForm" action="/inv/update" method="post" novalidate>
    <!-- Classification Dropdown -->
    <div class="form-group">
    <label for="classificationList">Classification</label>
    <%- classificationList %>
    </div>

    <!-- Make -->
    <div class="form-group">
    <label for="inv_make">Make</label>
    <input 
        type="text" 
        id="inv_make" 
        name="inv_make" 
        class="form-control" 
        required 
        value="<%= inv_make || '' %>"
        pattern="[A-Za-z0-9 ]{3,}"
        title="Make must be at least 3 characters long and contain only letters, numbers, and spaces."
    >
    </div>

    <!-- Model -->
    <div class="form-group">
    <label for="inv_model">Model</label>
    <input 
        type="text" 
        id="inv_model" 
        name="inv_model" 
        class="form-control" 
        required 
        value="<%= inv_model || '' %>"
        pattern="[A-Za-z0-9 ]{3,}"
        title="Model must be at least 3 characters long and contain only letters, numbers, and spaces."
    >
    </div>

    <!-- Description -->
    <div class="form-group">
    <label for="inv_description">Description</label>
    <textarea 
        id="inv_description" 
        name="inv_description" 
        class="form-control" 
        required
    ><%= inv_description || '' %></textarea>
    </div>

    <!-- Image Path -->
    <div class="form-group">
    <label for="inv_image">Image Path</label>
    <input 
        type="text" 
        id="inv_image" 
        name="inv_image" 
        class="form-control" 
        required 
        value="<%= inv_image || '/images/vehicles/no-image.png' %>"
        readonly
    >
    <small class="form-text text-muted">Default image path (read-only).</small>
    </div>

    <!-- Thumbnail Path -->
    <div class="form-group">
    <label for="inv_thumbnail">Thumbnail Path</label>
    <input 
        type="text" 
        id="inv_thumbnail" 
        name="inv_thumbnail" 
        class="form-control" 
        required 
        value="<%= inv_thumbnail || '/images/vehicles/no-image-tn.png' %>"
        readonly
    >
    <small class="form-text text-muted">Default thumbnail path (read-only).</small>
    </div>

    <!-- Price -->
    <div class="form-group">
    <label for="inv_price">Price</label>
    <input 
        type="number" 
        id="inv_price" 
        name="inv_price" 
        class="form-control" 
        required 
        value="<%= inv_price || '' %>"
        min="0"
        step="0.01"
        title="Price must be a positive number."
    >
    </div>

    <!-- Year -->
    <div class="form-group">
    <label for="inv_year">Year</label>
    <input 
        type="number" 
        id="inv_year" 
        name="inv_year" 
        class="form-control" 
        required 
        value="<%= inv_year || '' %>"
        min="1900"
        max="<%= new Date().getFullYear() %>"
        title="Year must be between 1900 and the current year."
    >
    </div>

    <!-- Miles -->
    <div class="form-group">
    <label for="inv_miles">Miles</label>
    <input 
        type="number" 
        id="inv_miles" 
        name="inv_miles" 
        class="form-control" 
        required 
        value="<%= inv_miles || '' %>"
        min="0"
        title="Miles must be a positive number."
    >
    </div>

    <!-- Color -->
    <div class="form-group">
    <label for="inv_color">Color</label>
    <input 
        type="text" 
        id="inv_color" 
        name="inv_color" 
        class="form-control" 
        required 
        value="<%= inv_color || '' %>"
        pattern="[A-Za-z ]+"
        title="Color must contain only letters and spaces."
    >
    </div>
    <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>" <% } %>>
    <button type="submit" id="updateVehicleBtn" class="btn btn-primary" disabled>Update Vehicles</button>
</form>
</div>

<script src="/js/inv-update.js"></script>
