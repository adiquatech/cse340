<title><%= title %></title>
<div class="add-container">
    <h1>Add New Classification</h1>

    <% if (messages && messages.length > 0) { %>
        <% messages.forEach(message => { %>
          <div class="messages <%= message.type %>">
            <p><%= message.text %></p>
          </div>
        <% }) %>
      <% } %>

    <!-- Form  -->
    <form id="classificationForm" action="/inv/add-classification" method="POST" novalidate>
    <div class="form-group">
        <label for="classification_name">Classification Name</label>
        <input 
        type="text" 
        id="classification_name" 
        name="classification_name" 
        class="form-control" 
        required 
        pattern="[A-Za-z0-9]+" 
        title="Only letters and numbers allowed, no spaces or special characters"
        value="<%= classification_name || '' %>"
        >
        <small class="form-text text-muted">No spaces or special characters allowed (e.g., "Sedan" or "SUV123" is valid; "Sedan SUV" or "Sedan!" is not).</small>
    </div>
    <button type="submit" class="btn btn-primary">Add Classification</button>
    </form>
</div>

<script src="/js/inv-update.js"></script>

