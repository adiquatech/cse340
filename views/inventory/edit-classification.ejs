<h1><%= title %></h1>
<div class="editClassificationForm">
  <% if (messages && messages.length > 0) { %>
    <% messages.forEach(message => { %>
      <div class="messages <%= message.type %>">
        <p><%= message.text %></p>
      </div>
    <% }) %>
  <% } %>

  <form id="editClassificationForm" action="/inv/update-classification" method="POST">
    <input type="hidden" name="classification_id" value="<%= classification_id %>">

    <label for="classification_name">Classification Name:</label>
    <input
      type="text"
      id="classification_name"
      name="classification_name"
      value="<%= classification_name %>"
      required
      pattern="[A-Za-z]+"
      title="Classification name must contain only letters."
    >

    <button type="submit">Update Classification</button>
    <a href="/inv/">Cancel</a>
  </form>
</div>